include i/head
body
  div.navbar.navbar-inverse.navbar-fixed-top
    div.navbar-inner
      div.container
        a.btn.btn-navbar(data-toggle="collapse",data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href="#") Timekeeping
        div.nav-collapse.collapse
          include i/menu
  div.container
    h1 Adminning?  Sweeeeeet
    h2 Projects
    -if(locals.projecterror)
      h3!= locals.projecterror
    form.form-inline
      label(for="projectname") New Project:           
        input#name(placeholder="Project Name",name="name")
      input#action(type="hidden",name="action",value="createproject")
      button.btn(type="submit") Create Project
    -for(var project in locals.projects)
      h4(class=locals.projects[project].archive?"archived":"")!= locals.projects[project].name
    h2 Tasks
      ul
        -for(var task in locals.tasks)
          li(class=locals.tasks[task].archive?"archived":"")!= locals.tasks[task].name

  script(src="/js/jquery.js")
  
